<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/number_area_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер участка"/>

    <EditText
        android:id="@+id/number_area_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите номер участка"/>

    <TextView
        android:id="@+id/fio_people_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Человек"/>

    <EditText
        android:id="@+id/fio_people_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите ФИО человека"/>

    <TextView
        android:id="@+id/number_telephone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Номер телефона"/>

    <EditText
        android:id="@+id/number_telephone_edet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Введите номер телефона человека"/>

    <TextView
        android:id="@+id/home_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Домашний адрес"/>

    <EditText
        android:id="@+id/home_address_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите адрес проживания человека"/>

    <Button
        android:id="@+id/delete_people_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить из базы"/>

    <Button
        android:id="@+id/add_people_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить в базу"/>

</LinearLayout>